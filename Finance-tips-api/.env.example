# Configuration Flask
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Configuration Base de donn√©es
DATABASE_URL=sqlite:///finance_tips.db
# Pour PostgreSQL en production:
# DATABASE_URL=postgresql://user:password@localhost:5432/finance_tips

# Configuration JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 heures en secondes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 jours en secondes

# Configuration CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# Configuration Email (pour newsletter)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@finance-tips.com

# Configuration Upload
MAX_CONTENT_LENGTH=16777216  # 16MB en octets

# Configuration Server
HOST=0.0.0.0
PORT=5000

# Configuration Mailchimp (optionnel)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id

